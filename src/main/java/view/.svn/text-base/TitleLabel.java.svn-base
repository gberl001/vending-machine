package view;

import java.awt.Dimension;
import java.awt.Font;

import javax.swing.JLabel;
import javax.swing.SwingConstants;

@SuppressWarnings("serial")
public class TitleLabel extends JLabel {

	public final static int FONT_SIZE = 20;
	public final static Dimension PREFERRED_SIZE = new Dimension(200, 40);
	
	public TitleLabel(String text) {
		this(text, SwingConstants.LEFT);
	}
	
	public TitleLabel(String text, int horizontalAlignment) {
		super(text, horizontalAlignment);
		this.setFont(new Font("default", 0, FONT_SIZE));
		this.setPreferredSize(new Dimension(200, 40));
	}
	
}
